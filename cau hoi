// ----------------------------------
let index = 0;

function loadQ() {
    if (index >= questions.length) {
        document.getElementById("question").innerText = "üéâ B·∫°n ƒë√£ ho√†n th√†nh 40 c√¢u!";
        document.getElementById("answers").innerHTML = "";
        return;
    }

    let q = questions[index];
    document.getElementById("question").innerHTML = "<h3>C√¢u " + (index+1) + ":</h3>" + q[0];

    let html = "";
    q[1].forEach((ans, i) => {
        html += `<div class='answer' onclick='pick(${i})'>${ans}</div>`;
    });
    document.getElementById("answers").innerHTML = html;
}

function pick(i) {
    let q = questions[index];
    let elements = document.getElementsByClassName("answer");

    if (i == q[2]) {
        elements[i].classList.add("correct");
        index++;
        setTimeout(loadQ, 800);
    } else {
        elements[i].classList.add("wrong");
        document.getElementById("status").innerText = "‚ùå Sai r·ªìi!";
    }
}

loadQ();
